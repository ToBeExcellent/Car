<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activity.MainActivity"
    tools:showIn="@layout/activity_main"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"></FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/car_bg_tab"
        android:baselineAligned="false"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/car_llyt_price"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/car_iv_price"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:contentDescription="@null"
                android:scaleType="fitCenter"
                android:src="@drawable/car_price_selector" />
            <TextView
                android:id="@+id/car_tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="降价"
                android:textColor="#121111"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/car_llyt_find"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/car_iv_find"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:contentDescription="@null"
                android:scaleType="fitCenter"
                android:src="@drawable/car_find_selector" />

            <TextView
                android:id="@+id/car_tv_find"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="找车"
                android:textColor="#121111"
                android:textSize="14sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/car_llyt_news"

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >
            <ImageView
                android:id="@+id/car_iv_news"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:contentDescription="@null"
                android:scaleType="fitCenter"
                android:src="@drawable/car_news_selector" />

            <TextView
                android:id="@+id/car_tv_news"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="资讯"
                android:textColor="#121111"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/car_llyt_question"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/car_iv_question"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:contentDescription="@null"
                android:scaleType="fitCenter"
                android:src="@drawable/car_question_selector" />

            <TextView
                android:id="@+id/car_tv_question"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="问答"
                android:textColor="#121111"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/car_llyt_self"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/car_iv_self"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:contentDescription="@null"
                android:scaleType="fitCenter"
                android:src="@drawable/car_self_selector" />

            <TextView
                android:id="@+id/car_tv_self"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="我的"
                android:textColor="#121111"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
