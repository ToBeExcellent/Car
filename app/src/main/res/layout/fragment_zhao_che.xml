<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.car.activity.ZhaoCheFragment"
    android:orientation="vertical">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/fragment_find_llyt_switch"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/fragment_find_ic_left"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/fragment_find_tv_brand"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="1"
                android:text="品牌找车"
                android:textColor="@color/switchChoose"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/fragment_find_tv_filter"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="1"
                android:text="精准找车"
                android:textColor="@color/switchNotChoose"
                android:textSize="16sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/fragment_find_iv_search"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:scaleType="fitCenter"
            android:src="@drawable/fragment_find_ic_search" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/fragment_find_flyt_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >
    </FrameLayout>




</LinearLayout>
